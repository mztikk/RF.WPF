<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:core="clr-namespace:System;assembly=mscorlib">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/RF.WPF;component/Resources/Colors.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/RF.WPF;component/Resources/RF.Values.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <core:Double x:Key="DefaultHeight">500</core:Double>
    <core:Double x:Key="DefaultWidth">800</core:Double>
    
    <Style x:Key="RF.Window" TargetType="Window">
        <Setter Property="Background" Value="{DynamicResource PageBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}"/>
        <Setter Property="Padding" Value="{DynamicResource WindowPadding}"/>
        <Setter Property="Height" Value="{DynamicResource DefaultHeight}"/>
        <Setter Property="Width" Value="{DynamicResource DefaultWidth}"/>
    </Style>
</ResourceDictionary>

